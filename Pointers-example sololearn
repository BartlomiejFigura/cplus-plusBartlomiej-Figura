#include <iostream>
using namespace std;

int main()
{
    int var = 50;
    int  *p;
    p = &var; //storing address of variable in pointer

    cout << var << endl;
    // Outputs 50 (the value of var)

    cout << p << endl;
    // Outputs 0x29fee8 (var's memory location)

    cout << *p << endl;
    /* Outputs 50 (the value of the variable
     stored in the pointer p) */

    *p=100; 
    /*changing value stored inside
     variable with the help of pointer*/
    cout << *p << endl;
    /* Outputs 100 (the value of the variable
     stored in the pointer p) */
    return 0;
}
